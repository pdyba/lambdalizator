root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
max_line_length = off
trim_trailing_whitespace = true

[Makefile]
indent_size = 1
indent_style = tab
tab_width = 4

[*.{cfg,json,yaml,yml}]
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[*.py]
max_line_length = 99
